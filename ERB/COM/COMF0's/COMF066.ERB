;개별 설정 커맨드 필터
SIF DITEMTYPE:999:66 > 0
	RETURN 0
;약품계 확장 커맨드를 유효하게 하지 않으면 안 됨
SIF (FLAG:15 & 32) == 0
	RETURN 0
;조수 플레이중은 일단 금지(잠정)
SIF ASSIPLAY
	RETURN 0
;아이템을 가지고 있는지, 아이템 없음 설정이 아니면 안 됨
SIF ITEM:64 == 0 && NOITEM == 0
	RETURN 0
;약물내성의 경우 안 됨
SIF TALENT:44
	RETURN 0
;조교자가 남자나 후타나리 나오지 않으면 안 됨
SIF EXIST_PENIS(PLAYER) == 0
	RETURN 0
;남자라면 안 됨
SIF TALENT:120
	RETURN 0
;임신중이라면 불가
SIF TALENT:140
	RETURN 0
;회란 중에는 불가
SIF TALENT:145
	RETURN 0
;산란촉진제를 사용 중이면 사용할 수 없다
SIF TEQUIP:9
	RETURN 0
;수면중은 불가
SIF EQUIP:14
	RETURN 0
;벌써 사용중이라면 사용할 수 없다
SIF TEQUIP:16
	RETURN 0
;긴급 피임약을 사용 중이면 사용할 수 없다
SIF TEQUIP:17
	RETURN 0
