SIF TEQUIP:42 && TEQUIP:42 != 3
	RETURN 0
;촉수 조교 중에는 불가
SIF TEQUIP:90
	RETURN 0
RETURN 1

;--------------------------------------------------
;커맨드 본체
;--------------------------------------------------
;난생, 산란 체질의 것에 먹였을 때는 네가티브 반응 일색이 됩니다.
@COM66
PRINTL 배란유도제
TSTR:0 = 배란유도제
CALL TRAIN_MESSAGE_COM066

;조제 지식이 있으면 소비를 억제한다
IF TALENT:MASTER:55 || (ASSI >= 0 && TALENT:ASSI:55)
	DOWNBASE:0 += 45
	DOWNBASE:1 += 45
ELSE
	DOWNBASE:0 += 100
	DOWNBASE:1 += 100
ENDIF

LOCAL:1 = 0
;태생 때(=난생, 산란 체질이 아닐 때)
IF TALENT:135 == 0 && TALENT:136 == 0
	;연모인가 친애나 상애 때
	IF TALENT:150 || TALENT:152 || TALENT:153
		SOURCE:11 = 1500
		LOCAL:1 = 1
	ENDIF
	;복종이나 망신 때
	IF TALENT:160 || TALENT:161
		SOURCE:17 = 2000
		LOCAL:1 = 1
	ENDIF
	;음란 때
	IF TALENT:170
		SOURCE:18 = 1800
		LOCAL:1 = 1
	ENDIF
	;함락 하고 있지는 않지만 순종 Lv5로 굴복 각인 3으로 반발 각인이 없을 때
	IF LOCAL:1 == 0 && ABL:10 == 5 && MARK:2 == 3 && MARK:9 == 0
		SOURCE:19 += 100
		SOURCE:22 = 1000
		LOCAL:1 = 1
	ENDIF

	;위의 각 조건에 들어맞지 않는 경우는 반발이 있다
	IF LOCAL:1 == 0
		SOURCE:32 = 1000
		LOCAL:2 = 400
		;ABL:순종을 본다
		IF ABL:10 == 0
			TIMES LOCAL:2 , 6.00
		ELSEIF ABL:10 == 1
			TIMES LOCAL:2 , 5.00
		ELSEIF ABL:10 == 2
			TIMES LOCAL:2 , 4.00
		ELSEIF ABL:10 == 3
			TIMES LOCAL:2 , 3.00
		ELSEIF ABL:10 == 4
			TIMES LOCAL:2 , 2.00
		ENDIF
		SOURCE:32 += LOCAL:2
		LOCAL:3 = 500
		;MARK:반발 각인을 본다
		IF MARK:9 == 0
			TIMES LOCAL:3 , 2.00
		ELSEIF MARK:9 == 1
			TIMES LOCAL:3 , 3.00
		ELSEIF MARK:9 == 2
			TIMES LOCAL:3 , 4.00
		ELSEIF MARK:9 >= 3
			TIMES LOCAL:3 , 5.00
		ENDIF
		SOURCE:25 += 1000
		SOURCE:32 += LOCAL:3
	ELSE
		SOURCE:19 = 1500
	ENDIF
	;난생·산란 체질의 경우는 효과가 없다.
	TEQUIP:16 = 1
ELSE
	;난생 혹은 산란 체질 때는 반발 밖에 부르지 않는다.
	SOURCE:32 = 500
	LOCAL:2 = 200
	;ABL:순종을 본다
	IF ABL:10 == 0
		TIMES LOCAL:2 , 6.00
	ELSEIF ABL:10 == 1
		TIMES LOCAL:2 , 5.00
	ELSEIF ABL:10 == 2
		TIMES LOCAL:2 , 4.00
	ELSEIF ABL:10 == 3
		TIMES LOCAL:2 , 3.00
	ELSEIF ABL:10 == 4
		TIMES LOCAL:2 , 2.00
	ENDIF
	SOURCE:31 += LOCAL:2
	SOURCE:32 += LOCAL:2
	LOCAL:3 = 400
	;MARK:반발 각인을 본다
	IF MARK:9 == 0
		TIMES LOCAL:3 , 2.00
	ELSEIF MARK:9 == 1
		TIMES LOCAL:3 , 3.00
	ELSEIF MARK:9 == 2
		TIMES LOCAL:3 , 4.00
	ELSEIF MARK:9 >= 3
		TIMES LOCAL:3 , 5.00
	ENDIF
	SOURCE:31 += LOCAL:3
	SOURCE:32 += LOCAL:3
ENDIF

SOURCE:26 = 250
;아이템 없음 모드가 아니면 배란유도제 보충 처리를 실시할지도 모른다.
IF NOITEM == 0
	ITEM:64 -= 1
	SIF FLAG:13 & 8 && MONEY:0 >= ITEMPRICE:64
		CALL FILL_PLURAL_ITEM, 64
ENDIF

CFLAG:21 |= 128

SIF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
	TCVAR:12 += 1

;약물 경험
TCVAR:40 += 1

RETURN 1

