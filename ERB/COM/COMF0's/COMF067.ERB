    DOWNBASE:0 += 0
    DOWNBASE:1 += 30
ELSE
    DOWNBASE:0 += 0
    DOWNBASE:1 += 50
ENDIF

;준비할 뿐(만큼)이므로 기본적으로는 아무것도 변동은 하지 않아 좋을지도
;(다소의 반발이나 공포는 발생해도 될지도 모르는데)

IF NOITEM == 0
    ITEM:65 -= 1
    SIF FLAG:13 & 8 && MONEY:0 >= ITEMPRICE:65
        CALL FILL_PLURAL_ITEM, 65
ENDIF
TEQUIP:17 = 1

SOURCE:26 = 150

SIF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
    TCVAR:12 += 1

;약물 경험
TCVAR:40 += 1

RETURN 1

