@COM86
PRINTL C현자의 피 주사
TSTR:0 = C현자의 피 주사
CALL TRAIN_MESSAGE_COM086

;조제 지식이 있으면 소비를 억제한다
LOCAL:3 = (TALENT:MASTER:55) ?  1 # 0
SIF ASSI >= 0 && TALENT:ASSI:55
	LOCAL:3 = 1

LOCAL:1 = (LOCAL:3) ?  55 # 70
LOCAL:2 = (LOCAL:3) ?  205 # 270

DOWNBASE:0 += LOCAL:1
DOWNBASE:1 += LOCAL:2

SOURCE:0 = 1200
SOURCE:24 = 500
SOURCE:26 = 18750
SOURCE:31 = 5000

;ABL:순종을 본다
IF ABL:10 == 0
	TIMES SOURCE:31 , 2.00
ELSEIF ABL:10 == 1
	TIMES SOURCE:31 , 1.80
ELSEIF ABL:10 == 2
	TIMES SOURCE:31 , 1.50
ELSEIF ABL:10 == 3
	TIMES SOURCE:31 , 1.20
ELSEIF ABL:10 == 4
	TIMES SOURCE:31 , 1.00
ELSE
	TIMES SOURCE:31 , 0.80
ENDIF

;ABL:C감각을 본다
IF ABL:0 == 0
	TIMES SOURCE:0 , 0.50
ELSEIF ABL:0 == 1
	TIMES SOURCE:0 , 0.75
ELSEIF ABL:0 == 2
	TIMES SOURCE:0 , 1.00
ELSEIF ABL:0 == 3
	TIMES SOURCE:0 , 1.25
ELSEIF ABL:0 == 4
	TIMES SOURCE:0 , 1.50
	EX:0 += RAND:2
ELSE
	TIMES SOURCE:0 , 2.00
	EX:0 += 1
ENDIF

;ABL:마조끼를 본다
IF ABL:21 == 0
	TIMES SOURCE:24 , 0.80
	TIMES DOWNBASE:0 , 1.20
ELSEIF ABL:21 == 1
	TIMES SOURCE:24 , 1.10
	TIMES DOWNBASE:0 , 1.10
ELSEIF ABL:21 == 2
	TIMES SOURCE:24 , 1.30
	TIMES DOWNBASE:0 , 1.00
ELSEIF ABL:21 == 3
	TIMES SOURCE:24 , 1.50
	TIMES DOWNBASE:0 , 0.90
ELSEIF ABL:21 == 4
	TIMES SOURCE:24 , 1.70
	TIMES DOWNBASE:0 , 0.80
ELSE
	TIMES SOURCE:24 , 2.10
	TIMES DOWNBASE:0 , 0.70
ENDIF

;PALAM:고통을 본다
IF PALAM:16 < PALAMLV:1
	SOURCE:20 = 3000
ELSEIF PALAM:16 < PALAMLV:2
	SOURCE:20 = 3300
ELSEIF PALAM:16 < PALAMLV:3
	SOURCE:20 = 3600
ELSEIF PALAM:16 < PALAMLV:4
	SOURCE:20 = 4000
ELSE
	SOURCE:20 = 4500
ENDIF

;반항적
SIF TALENT:11
	TIMES SOURCE:20 , 1.10
;저항
SIF TALENT:34
	TIMES SOURCE:20 , 1.10
;C민감
IF TALENT:100
	IF ABL:0 <= 3
		TIMES SOURCE:0 , 1.20
	ELSEIF ABL:0 == 4
		TIMES SOURCE:0 , 1.50
	ELSE
		TIMES SOURCE:0 , 1.80
		EX:0 += RAND:2
	ENDIF
;C둔감
ELSEIF TALENT:101
	EX:0 -= (EX:0 > 1) ?  1 # 0
	IF ABL:0 <= 3
		TIMES SOURCE:0 , 0.60
	ELSEIF ABL:0 == 4
		TIMES SOURCE:0 , 0.70
	ELSE
		TIMES SOURCE:0 , 0.80
	ENDIF
ENDIF

;조교자가 바늘 다루기
SIF TALENT:PLAYER:53
	TIMES SOURCE:20 , 0.90
;조교자가 유치
SIF TALENT:PLAYER:131
	TIMES SOURCE:20 , 1.20

;레이센이나 에이린에 의한 사용
IF TEQUIP:90 == 0
	SIF NO:PLAYER == 28
		TIMES SOURCE:20 , 0.70
	SIF NO:PLAYER == 29
		TIMES SOURCE:20 , 0.50
ENDIF

IF TALENT:120 == 0 && TALENT:PLAYER:120 == 0
	TCVAR:12 += 2
ELSEIF TALENT:120 && TALENT:PLAYER:120
	TCVAR:13 += 2
ENDIF

;약물 경험
TCVAR:40 += 3

SIF PLAYER == MASTER
	TCVAR:41 += 2

;주인 경험 플래그
SIF ASSIPLAY == 0 && ABL:21 >= 3
	TFLAG:50 += 1

;현자의 피 1개 소비
IF NOITEM == 0
	ITEM:66 -= 1
	SIF FLAG:13 & 8 && MONEY:0 >= ITEMPRICE:66
		CALL FILL_PLURAL_ITEM, 66
ENDIF

TEQUIP:13 = 8

RETURN 1

